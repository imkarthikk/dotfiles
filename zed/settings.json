// Zed settings
{
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "ui_font_family": "System Font",
  "format_on_save": "on",
  "soft_wrap": "preferred_line_length",
  "tab_size": 2,
  "line_indicator_format": "short",
  "current_line_highlight": "gutter",
  "formatter": "auto",
  "code_actions_on_format": {
    "source.fixAll": true
  },
  "git": {
    "git_gutter": "tracked_files"
  },
  "centered_layout": {
    "left_padding": 0.4,
    "right_padding": 0.4
  },
  "theme": {
    "mode": "system",
    "light": "macOS Classic Light",
    "dark": "macOS Classic Dark"
  },
  "scrollbar": {
    "show": "system"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true
  },
  "file_types": {
    "CSS": ["scss"],
    "Astro": ["astro"]
  },
  "project_panel": {
    "dock": "right",
    "file_icons": true
  },
  "languages": {
    "Astro": {
      "show_inline_completions": true,
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "language_servers": ["tailwincss-language-server"]
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "TSX": {
        "code_actions_on_format": {
          "source.organizeImports": true
        }
      },
      "JavaScript": {
        "code_actions_on_format": {
          "source.fixAll.eslint": true
        }
      }
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "includeLanguages": {
        "astro": "html"
      },
      "classAttributes": ["class", "className", "class:list"],
      "experimental": {
        "classRegex": ["[class|className]\\s\\:\\=\\s\"([^\"]*)"]
      }
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
