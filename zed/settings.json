// Zed settings
{
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "ui_font_family": "System Font",
  "format_on_save": "on",
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "line_indicator_format": "short",
  "current_line_highlight": "gutter",
  "formatter": "auto",
  "wrap_guides": [80, 100],
  "show_wrap_guides": true,
  // "code_actions_on_format": {
  //   "source.fixAll": true
  // },
  "git": {
    "git_gutter": "tracked_files"
  },
  "theme": {
    "mode": "system",
    "light": "macOS Classic Light",
    "dark": "macOS Classic Dark"
  },
  "buffer_font_features": {
    "calt": true, // contextual alternatives e.g. !=
    "liga": true, // ligatures
    "onum": true, // old style numerals
    "ss02": true // Stylistic Set 02 (pseudo-kerning in Pixel Code)
  },
  "scrollbar": {
    "show": "system"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true
  },
  "file_types": {
    "MDX": ["md"]
  },
  "languages": {
    "Astro": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "language_servers": [
        "tailwindcss-language-server",
        "astro-language-server"
      ]
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "colorDecorators": false,
      "classAttributes": ["class", "className", "class:list", "tw", "twx"]
    }
  },
  "project_panel": {
    "dock": "right",
    "file_icons": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
